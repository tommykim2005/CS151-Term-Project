<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cs151.application.StudentListController"
            prefWidth="1024.0" prefHeight="680.0">

    <top>
        <!-- Search / Filter controls -->
        <VBox spacing="6" BorderPane.alignment="CENTER">
            <children>
                <Label text="Search / Filter (case-insensitive)">
                    <font><Font size="18.0"/></font>
                </Label>

                <HBox spacing="8">
                    <children>
                        <Label text="Name:"/>
                        <TextField fx:id="nameSearch" prefWidth="160.0"/>

                        <Label text="Status:"/>
                        <ComboBox fx:id="statusSearch" prefWidth="140.0"/>

                        <Label text="Languages (comma sep):"/>
                        <TextField fx:id="langSearch" prefWidth="180.0"/>

                        <Label text="Databases (comma sep):"/>
                        <TextField fx:id="dbSearch" prefWidth="180.0"/>

                        <Label text="Role:"/>
                        <ComboBox fx:id="roleSearch" prefWidth="140.0"/>

                        <Button fx:id="filterBtn" text="Filter"/>
                        <Button fx:id="resetBtn" text="Reset"/>
                    </children>
                </HBox>
            </children>
            <padding><Insets top="8" right="8" bottom="8" left="8"/></padding>
        </VBox>
    </top>

    <center>
        <!-- Table -->
        <TableView fx:id="table" editable="true">
            <columns>
                <TableColumn fx:id="full_Name" text="Full Name" prefWidth="150.0"/>
                <TableColumn fx:id="academic_Status" text="Academic Status" prefWidth="120.0"/>
                <TableColumn fx:id="current_Job_Status" text="Job Status" prefWidth="120.0"/>
                <TableColumn fx:id="job_Details" text="Job Details" prefWidth="150.0"/>
                <TableColumn fx:id="programming_Languages" text="Languages" prefWidth="160.0"/>
                <TableColumn fx:id="databases" text="Databases" prefWidth="160.0"/>
                <TableColumn fx:id="preferred_Role" text="Role" prefWidth="120.0"/>
                <TableColumn fx:id="comments" text="Comments" prefWidth="250.0"/>
                <TableColumn fx:id="whitelist" text="Whitelist" prefWidth="80.0"/>
                <TableColumn fx:id="blacklist" text="Blacklist" prefWidth="80.0"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <!-- Comment + delete controls -->
        <HBox spacing="12" BorderPane.alignment="CENTER">
            <children>
                <Label text="Add Comment:"/>
                <TextArea fx:id="addCommentArea" prefRowCount="2" prefWidth="540.0"/>
                <Button fx:id="addCommentBtn" text="Append to Selected"/>
                <Button fx:id="deleteBtn" text="Delete Selected"/>
            </children>
            <padding><Insets top="8" right="8" bottom="8" left="8"/></padding>
        </HBox>
    </bottom>
</BorderPane>
