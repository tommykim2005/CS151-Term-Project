<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cs151.application.AddStudentController"
            prefHeight="640.0" prefWidth="860.0">

    <!-- Make sure the ToggleGroup is defined so it injects -->
    <fx:define>
        <ToggleGroup fx:id="jobStatusGroup"/>
    </fx:define>

    <children>
        <Label layoutX="24.0" layoutY="18.0" text="Define Student Profile">
            <font><Font size="28.0"/></font>
        </Label>

        <GridPane layoutX="24.0" layoutY="72.0">
            <columnConstraints>
                <ColumnConstraints minWidth="220.0" prefWidth="240.0"/>
                <ColumnConstraints minWidth="520.0" prefWidth="560.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="32.0"/>
                <RowConstraints prefHeight="32.0"/>
                <RowConstraints prefHeight="32.0"/>
                <RowConstraints prefHeight="32.0"/>
                <RowConstraints prefHeight="120.0"/>
                <RowConstraints prefHeight="120.0"/>
                <RowConstraints prefHeight="32.0"/>
                <RowConstraints prefHeight="150.0"/>
                <RowConstraints prefHeight="32.0"/>
            </rowConstraints>
            <padding><Insets top="8" bottom="8" left="8" right="8"/></padding>
            <hgap>10</hgap><vgap>10</vgap>

            <children>
                <!-- 2.1 Basic Information -->
                <Label text="Full Name (required):" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="fullNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Academic Status (required):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="academicStatusCombo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Current Job Status:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <HBox spacing="16" GridPane.rowIndex="2" GridPane.columnIndex="1">
                    <children>
                        <RadioButton fx:id="employedRadio" text="Employed" toggleGroup="$jobStatusGroup"/>
                        <RadioButton fx:id="notEmployedRadio" text="Not Employed" toggleGroup="$jobStatusGroup" selected="true"/>
                    </children>
                </HBox>

                <Label text="Job Details (required if Employed):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="jobDetailsField" GridPane.rowIndex="3" GridPane.columnIndex="1" disable="true"/>

                <!-- 2.2 Skills & Interests -->
                <Label text="Programming Languages Known (required):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <ListView fx:id="languagesList" GridPane.rowIndex="4" GridPane.columnIndex="1" prefHeight="110.0"/>

                <Label text="Databases Known (required):" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <ListView fx:id="databasesList" GridPane.rowIndex="5" GridPane.columnIndex="1" prefHeight="110.0"/>

                <Label text="Preferred Professional Role (required):" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <ComboBox fx:id="roleCombo" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                <!-- 2.3 Faculty Evaluation -->
                <Label text="Comments / Journal Entries:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <TextArea fx:id="commentsArea" GridPane.rowIndex="7" GridPane.columnIndex="1" prefRowCount="5"/>

                <!-- 2.4 Future Services Flags -->
                <HBox spacing="20" GridPane.rowIndex="8" GridPane.columnIndex="1">
                    <children>
                        <CheckBox fx:id="whitelistCheck" text="Whitelist"/>
                        <CheckBox fx:id="blacklistCheck" text="Blacklist"/>
                    </children>
                </HBox>
            </children>
        </GridPane>

    <HBox spacing="12" alignment="CENTER_RIGHT">
        <children>
            <Button fx:id="saveButton" text="Save" onAction="#saveStudent" prefWidth="120" defaultButton="true"/>
            <Button fx:id="backButton" text="Exit" onAction="#goBack" prefWidth="120" cancelButton="true"/>
        </children>
        <padding>
            <Insets top="8" right="16" bottom="8" left="16"/>
        </padding>
        <AnchorPane.leftAnchor>0.0</AnchorPane.leftAnchor>
        <AnchorPane.rightAnchor>0.0</AnchorPane.rightAnchor>
        <AnchorPane.bottomAnchor>8.0</AnchorPane.bottomAnchor>
    </HBox>
    </children>
</AnchorPane>
